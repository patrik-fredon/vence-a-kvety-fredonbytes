{
  "name": "pohrebni-vence",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out dist coverage",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:imports": "node scripts/optimize-imports.js",
    "optimize:exports": "node scripts/optimize-exports.js",
    "optimize:bundle": "npm run analyze:imports && npm run analyze",
    "db:migrate": "node scripts/migrate.js",
    "db:seed:production": "node scripts/seed-production.js",
    "db:seed:funeral": "node scripts/seed-enhanced-data.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:contrast": "npx tsx scripts/test-contrast-ratios.ts",
    "test:gradient-contrast": "npx tsx scripts/test-gradient-contrast-comprehensive.ts",
    "test:interactive-contrast": "npx tsx scripts/test-interactive-contrast.ts",
    "test:focus-visibility": "npx tsx scripts/test-focus-state-visibility.ts",
    "test:accessibility": "npm run test:contrast && npm run test:gradient-contrast && npm run test:interactive-contrast && npm run test:focus-visibility",
    "measure:vitals": "npx tsx scripts/measure-core-web-vitals.ts",
    "measure:vitals:prod": "npx tsx scripts/measure-core-web-vitals.ts --url=https://your-production-url.com",
    "analyze:bundle": "npx tsx scripts/analyze-bundle-size.ts",
    "analyze:bundle:ci": "npm run build && npm run analyze:bundle",
    "analyze:bundle:baseline": "npx tsx scripts/analyze-bundle-size.ts --save-baseline"
  },
  "dependencies": {
    "@auth/supabase-adapter": "^1.10.0",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@stripe/react-stripe-js": "^4.0.2",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/supabase-js": "^2.57.2",
    "@types/ioredis": "^4.28.10",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.3",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "ioredis": "^5.7.0",
    "next": "15.5.2",
    "next-auth": "^5.0.0-beta.29",
    "next-intl": "^4.3.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "resend": "^6.1.0",
    "stripe": "^19.1.0",
    "tailwind-merge": "^2.5.4",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "cross-env": "^7.0.3",
    "jsdom": "^27.0.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
